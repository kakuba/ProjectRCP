<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="projectrcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="BookPerspective"
            class="projectrcp.BookPerspective"
            id="ProjectRCP.bookPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
     
      <view
            class="projectrcp.views.BookCommentsView"
            id="ProjectRCP.bookCommentsView"
            name="BookCommentsView">
      </view> <view
            name="BookSearchView"
            class="projectrcp.views.BookSearchView"
            id="ProjectRCP.bookSearchView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ProjectRCP.bookPerspective">
         <view
               closeable="true"
               id="ProjectRCP.bookSearchView"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="ProjectRCP.bookCommentsView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="ProjectRCP.bookSearchView"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="ProjectRCP.deleteBookHandler"
                  style="push">
            </command>
            <command
                  commandId="ProjectRCP.editBook"
                  style="push">
            </command>
         </menu>
         <menu
               label="Views">
            <command
                  commandId="ProjectRCP.openBookSearchViewCommand"
                  style="push">
            </command>
            <command
                  commandId="ProjectRCP.openBookCommentsViewCommand"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help">
            <command
                  commandId="ProjectRCP.openHelpDialog"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:ProjectRCP.bookSearchView">
         <command
               commandId="ProjectRCP.deleteBookHandler"
               style="push">
         </command>
         <command
               commandId="ProjectRCP.editBook"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:ProjectRCP.bookSearchView">
         <command
               commandId="ProjectRCP.deleteBookHandler"
               style="push">
         </command>
         <command
               commandId="ProjectRCP.editBook"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ProjectRCP.openBookSearchViewCommand"
            name="Search view">
      </command>
      <command
            id="ProjectRCP.openBookCommentsViewCommand"
            name="Comments view">
      </command>
      <command
            id="ProjectRCP.openHelpDialog"
            name="Help Dialog">
      </command>
      <command
            id="ProjectRCP.deleteBookHandler"
            name="Delete book">
      </command>
      <command
            id="ProjectRCP.editBook"
            name="Edit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="projectrcp.handlers.BookSearchHandler"
            commandId="ProjectRCP.openBookSearchViewCommand">
      </handler>
      <handler
            class="projectrcp.handlers.BookCommentsHandler"
            commandId="ProjectRCP.openBookCommentsViewCommand">
      </handler>
      <handler
            class="projectrcp.handlers.HelpDialogHandler"
            commandId="ProjectRCP.openHelpDialog">
      </handler>
      <handler
            class="projectrcp.handlers.DeleteHandler"
            commandId="ProjectRCP.deleteBookHandler">
      </handler>
      <handler
            class="projectrcp.handlers.EditBookHandler"
            commandId="ProjectRCP.editBook">
      </handler>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ProjectRCP.application"
            name="config">
         <property
               name="appName"
               value="config">
         </property>
      </product>
   </extension>
   <extension
         id="product1"
         point="org.eclipse.core.runtime.products">
      <product
            application="ProjectRCP.application"
            name="RCP Application">
         <property
               name="appName"
               value="RCP Application">
         </property>
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="projectrcp.splashHandlers.ExtensibleSplashHandler"
            id="projectrcp.splashHandlers.extensible">
      </splashHandler>
      <splashHandlerProductBinding
            productId="ProjectRCP.product1"
            splashId="projectrcp.splashHandlers.extensible">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="ProjectRCP.splashExtension">
      <splashExtension
            icon="icons/af.png"
            id="af"
            tooltip="Application Framework">
      </splashExtension>
      <splashExtension
            icon="icons/embedded.png"
            id="embedded"
            tooltip="Embedded">
      </splashExtension>
      <splashExtension
            icon="icons/enterprise.png"
            id="enterprise"
            tooltip="Enterprise">
      </splashExtension>
      <splashExtension
            icon="icons/languages.png"
            id="languages"
            tooltip="Languages">
      </splashExtension>
      <splashExtension
            icon="icons/rcp.png"
            id="rcp"
            tooltip="RCP">
      </splashExtension>
   </extension>

</plugin>
